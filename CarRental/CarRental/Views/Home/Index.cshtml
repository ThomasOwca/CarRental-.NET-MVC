@model CarRental.Models.ViewModels.CarViewModel

<br />
<div class="row">
    <div class="col-lg-4">
        @using (Html.BeginRouteForm(FormMethod.Post))
        {
            <h3>Add Car</h3>
            <div class="form-group">
                <label>Make</label>
                <input type="text" class="form-control" placeholder="Make" name="carMake" />
            </div>
            <div class="form-group">
                <label>Model</label>
                <input type="text" class="form-control" placeholder="Model" name="carModel" />
            </div>
            <div class="form-group">
                <label>Year</label>
                <select name="carYear" class="form-control" title="Year">
                    <option disabled selected>Year</option>
                    @for (int year = DateTime.Now.Year + 1; year >= DateTime.Now.Year - 10; year--)
                    {
                        <option>@year</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" class="form-control btn-warning" value="Submit" />
            </div>
        }
    </div>
    <div class="col-lg-8 scrollable-table">
        <span>
            <label>Our Newest Rental Cars! (@Model.Cars.Count Vehicles)</label>
        </span>
        <br />
        <br />
        @using (Html.BeginForm("BulkUpdate", "Home", FormMethod.Post))
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Year</th>
                        <th>Make</th>
                        <th>Model</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Cars.Count; i++)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("DeleteCar", new { id = Model.Cars[i].Id })" class="fa fa-close custom"></a>
                            </td>
                            <td>@Html.CheckBoxFor(check => Model.CheckedBoxes[i])</td>
                            <td>@Model.Cars[i].Year</td>
                            <td>@Model.Cars[i].Make</td>
                            <td>@Model.Cars[i].Model</td>
                        </tr>
                    }
                </tbody>
            </table>
            <input type="submit" value="Remove Selected" class="btn btn-primary"/>
        }
    </div>
</div>

